{
  "env": {
    "NODE_ENV": "development"
  },
  "permissions": {
    "allow": [
      "mcp__container-use__environment_checkpoint",
      "mcp__container-use__environment_create",
      "mcp__container-use__environment_add_service",
      "mcp__container-use__environment_file_delete",
      "mcp__container-use__environment_file_list",
      "mcp__container-use__environment_file_read",
      "mcp__container-use__environment_file_write",
      "mcp__container-use__environment_open",
      "mcp__container-use__environment_run_cmd",
      "mcp__container-use__environment_update",
      "Bash(bun test:*)",
      "Bash(bun add:*)",
      "Bash(bun run:*)",
      "Bash(bunx:*)",
      "Bash(npm run:*)",
      "Bash(npx:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git log:*)",
      "Bash(git status)",
      "Bash(git branch:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git diff:*)",
      "Bash(git show:*)",
      "Bash(git stash:*)",
      "Bash(git commit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr ready:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh issue create:*)",
      "Bash(gh label:*)",
      "Bash(gh search:*)",
      "Bash(gh status:*)",
      "Bash(ls:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(find:*)",
      "Bash(pwd)",
      "Bash(which:*)",
      "Bash(echo:*)",
      "Bash(wc:*)",
      "Bash(cat:*)",
      "Bash(tree:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(curl:*)",
      "Bash(tsc:*)",
      "Bash(bd:*)",
      "Bash(gh run view:*)",
      "Bash(gh run list:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh repo view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(secrets/**)",
      "Read(**/*secret*)",
      "Read(**/*credential*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(~/.ssh/**)",
      "Read(~/.aws/**)",
      "Read(~/.config/**/credentials*)",
      "Write(.env*)",
      "Write(secrets/**)",
      "Write(**/*.pem)",
      "Write(**/*.key)",
      "Write(~/.ssh/**)",
      "Write(~/.aws/**)",
      "Write(~/.config/**/credentials*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git rebase:*)",
      "Bash(git push --force:*)",
      "Bash(rm -rf:*)"
    ],
    "defaultMode": "default"
  },
  "hooks": {
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/stop.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh"
  },
  "alwaysThinkingEnabled": true,
  "model": "opus"
}
